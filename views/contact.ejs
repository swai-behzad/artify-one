<%- include('layouts/main', { title: 'Contact Us' }) %>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4 mb-4">Contact Us</h1>
            <p class="lead mb-4">Have questions? We'd love to hear from you.</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h3 class="card-title mb-4">Get in Touch</h3>
                    <form action="/contact" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="subject" name="subject" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h3 class="card-title mb-4">Contact Information</h3>
                    <div class="mb-4">
                        <h5>Email</h5>
                        <p>support@artifyone.com</p>
                    </div>
                    <div class="mb-4">
                        <h5>Office Hours</h5>
                        <p>Monday - Friday: 9:00 AM - 5:00 PM (EST)</p>
                    </div>
                    <div class="mb-4">
                        <h5>Address</h5>
                        <p>123 Brand Street<br>New York, NY 10001<br>United States</p>
                    </div>
                    <div>
                        <h5>Follow Us</h5>
                        <div class="d-flex gap-3">
                            <a href="#" class="text-dark"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="text-dark"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="text-dark"><i class="bi bi-linkedin"></i></a>
                            <a href="#" class="text-dark"><i class="bi bi-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 